<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expense Tracker - Sign Up</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <style>
      body,
      html {
        height: 100%;
        margin: 0;
        padding: 0;
        position: relative;
        /* background-image: linear-gradient(41deg, rgba(107, 107, 107, 0.04) 0%, rgba(107, 107, 107, 0.04) 8%,rgba(31, 31, 31, 0.04) 8%, rgba(31, 31, 31, 0.04) 100%),linear-gradient(9deg, rgba(228, 228, 228, 0.04) 0%, rgba(228, 228, 228, 0.04) 62%,rgba(54, 54, 54, 0.04) 62%, rgba(54, 54, 54, 0.04) 100%),linear-gradient(124deg, rgba(18, 18, 18, 0.04) 0%, rgba(18, 18, 18, 0.04) 37%,rgba(233, 233, 233, 0.04) 37%, rgba(233, 233, 233, 0.04) 100%),linear-gradient(253deg, rgba(201, 201, 201, 0.04) 0%, rgba(201, 201, 201, 0.04) 55%,rgba(47, 47, 47, 0.04) 55%, rgba(47, 47, 47, 0.04) 100%),linear-gradient(270deg, rgba(172, 172, 172, 0.04) 0%, rgba(172, 172, 172, 0.04) 33%,rgba(26, 26, 26, 0.04) 33%, rgba(26, 26, 26, 0.04) 100%),linear-gradient(64deg, rgba(11, 11, 11, 0.04) 0%, rgba(11, 11, 11, 0.04) 38%,rgba(87, 87, 87, 0.04) 38%, rgba(87, 87, 87, 0.04) 100%),linear-gradient(347deg, rgba(199, 199, 199, 0.04) 0%, rgba(199, 199, 199, 0.04) 69%,rgba(4, 4, 4, 0.04) 69%, rgba(4, 4, 4, 0.04) 100%),linear-gradient(313deg, rgba(36, 36, 36, 0.04) 0%, rgba(36, 36, 36, 0.04) 20%,rgba(91, 91, 91, 0.04) 20%, rgba(91, 91, 91, 0.04) 100%),linear-gradient(90deg, rgb(10, 17, 72),rgb(35, 148, 228)); */
        background-image: url("/images/image.jpg");
        background-size: cover;
        height: 100vh;
      }

      /* Include your custom styles here */

      /* Example style */
      .container {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .form-container {
        width: 300px;
        background-color: aliceblue;
        padding: 30px 20px;
        position: relative;
        box-shadow: 0px 0px 10px 3px #ccc;
      }

      .form-container input {
        width: 100%;
        height: 35px;
        margin-bottom: 15px;
      }

      .form-container button {
        background-color: black;
        color: aliceblue;
        padding: 10px 15px;
        cursor: pointer;
        width: 100%;
      }

      .form-container h1 {
        text-align: center;
        margin-bottom: 20px;
        font-weight: 800;
        font-size: xx-large;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="form-container">
        <h1>Sign up form</h1>
        <form
          action="/register"
          method="POST"
          name="myform2"
          onsubmit="return validateForm()"
          autocomplete="off"
        >
          <input type="text" name="email" id="email1" placeholder="Email" />
          <input
            type="text"
            name="username"
            id="username1"
            placeholder="Username"
          />
          <input
            type="password"
            name="password"
            id="password1"
            placeholder="Password"
          />
          <input
            type="password"
            name="confirmpassword"
            id="confirmpassword1"
            placeholder="Confirm Password"
          />
          <button type="submit">Submit</button>
        </form>
      </div>
    </div>
    <script>
      function clearPopupFields() {
        document.getElementById("email1").value = "";
        document.getElementById("username1").value = "";
        document.getElementById("password1").value = "";
        document.getElementById("confirmpassword1").value = "";
      }
      window.onload = function () {
        clearPopupFields();
      };
      function validateForm() {
        var email1 = document.forms["myform2"]["email1"].value;
        var password1 = document.forms["myform2"]["password1"].value;
        var confirmpassword1 =
          document.forms["myform2"]["confirmpassword1"].value;
        var username1 = document.forms["myform2"]["username1"].value;

        if (
          email1 === "" ||
          password1 === "" ||
          username1 === "" ||
          confirmpassword1 === ""
        ) {
          alert("Please fill in all fields for signup");
          return false;
        }

        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!email1.match(emailRegex)) {
          alert("Please enter a valid email address");
          return false;
        }

        if (password1.length < 8) {
          alert("Password must be at least 8 characters");
          return false;
        }
        if (password1 !== confirmpassword1) {
          alert("Password do not match!!");
          return false;
        }
        return true;
      }
    </script>
  </body>
</html>
